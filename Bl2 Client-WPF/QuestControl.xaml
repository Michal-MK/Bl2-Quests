<UserControl x:Class="Bl2Client.QuestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bl2Client"
             xmlns:bl2Common="clr-namespace:Bl2Common;assembly=Bl2Common"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=bl2Common:Quest}"
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
		<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" Name="ColorCol"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
			<ColumnDefinition Width="auto"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Rectangle Height="{Binding RelativeSource={RelativeSource Self}, Path=Width}" Fill="{Binding GivenBy, Converter={StaticResource GivenByToColorConv}}"/>
        <Grid Grid.Column="1">
			<TextBlock Text="{Binding Name}"></TextBlock>
        </Grid>
		<StackPanel Grid.Column="2" Orientation="Horizontal">
	        <Button Content="Accept"/>
	        <Button Content="Delete"/>
	        <Button Content="Trigger"/>
		</StackPanel>
    </Grid>
</UserControl>
